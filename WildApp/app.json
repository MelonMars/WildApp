{
  "expo": {
    "name": "WildApp",
    "slug": "WildApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/wildicon.png",
    "scheme": "wildapp",
    "deepLinking": true,
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "io.wildapp.wildapp",
      "infoPlist": {
        "NSCameraUsageDescription": "We need your camera for taking a photo of your challenge or profile picture.",
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to upload photos for challenges or your profile picture.",
        "NSLocationWhenInUseUsageDescription": "We need access to your location for our map functionality to work."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f8f288ab-6e26-4a29-ad1c-91ad0768558b"
      }
    }
  }
}
